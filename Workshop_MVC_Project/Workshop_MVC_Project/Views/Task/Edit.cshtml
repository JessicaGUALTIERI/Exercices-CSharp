@model TaskModel

@if (Model != null)
{
    <h2>@Model.Title - Due to : @Model.DueDate</h2>

    <p>@Model.Description</p>

    <form method="post" asp-controller="Task" asp-action="Edit">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Title" />
        <input type="hidden" asp-for="Description" />
        <input type="hidden" asp-for="DueDate" />
        <div class="mb-3 row">
            <div class="col-2">
                <label asp-for="IsCompleted" class="col-form-label">Completed :</label>
            </div>
            <div class="col-1">
                <input type="checkbox" asp-for="IsCompleted" />
            </div>
            <div class="col">
                <span class="text-danger" asp-validation-for="IsCompleted"></span>
            </div>
        </div>

        <div class="mb-3 row">
            <div class="col">
                <input type="submit" class="btn" value="Done" />
            </div>
        </div>
    </form>
}
