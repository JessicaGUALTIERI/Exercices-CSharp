@model List<Product>

@section title {
    <h3>Manage Products</h3>
}

@if (Model != null && Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Product category</th>
                <th>Product name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Category?.Name</td>
                    <td>@product.Name</td>
                    <td>@product.Price €</td>
                    <td>@product.Quantity</td>
                    <td>
                        <a class="btn btn-link" asp-controller="products" asp-action="edit" asp-route-id="@product.ProductId">Edit</a>
                    </td>
                    <td></td>
                </tr>
            }
        </tbody>
    </table>
}

<a class="btn btn-primary" asp-controller="products" asp-action="add">Add</a>


