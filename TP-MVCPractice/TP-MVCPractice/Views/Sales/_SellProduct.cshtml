@model Product

<div class="form-group mt-3">
    <label asp-for="Name"></label>
    <input class="form-control" asp-for="Name" type="text" readonly />
</div>
<div class="form-group mt-3">
    <label asp-for="Price"></label>
    <input class="form-control" id="price" type="text" readonly value="@(string.Format("{0:N2}€", Model.Price))" />
</div>